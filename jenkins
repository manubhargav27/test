pipeline {
         agent any
         environment{
           MY_FILE = fileExists 'test'
         }
stages {
     stage('clone repo'){

    when { expression { MY_FILE == 'false' } }
    steps {
          bat "git clone https://github.com/manubhargav27/test.git"
          print "pulled the code"
    }
}
   stage('compile') {
  steps {
      bat "cd test"
      bat "mvn compile"
    }
}
    stage('test')
{
   steps {
   bat "mvn test"
}
}
   stage('package')
{
  steps {
  bat "mvn package"
}
}
}
}
